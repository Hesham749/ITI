@model IEnumerable<Department>
@{
	ViewData["Title"] = "Index";
}

<a asp-action="Create" class="btn btn-primary mb-3">ADD</a>
<table class="table table-bordered table-hover">
	<thead>

		<tr>
			<th>ID</th>
			<th>Name</th>
			<th>Capacity</th>
			<th>Operations</th>

		</tr>
	</thead>
	<tbody>
		@if (Model.Count() == 0)
		{
			<tr>
				<td colspan="3">No Departments Exists</td>
			</tr>
		}
		else
		{
			foreach (Department dp in Model)
			{
				<tr>
					<td>@dp.Id</td>
					<td>@dp.Name</td>
					<td>@dp.Capacity</td>
					<td>
						<form class="d-inline-block" asp-action="Update" asp-controller="Department" asp-route-id="@dp.Id">
							<input type="submit" class="btn btn-warning" value="Update">
						</form>
						<form class="d-inline-block" asp-action="Delete" asp-route-id="@dp.Id">
							<input class="btn btn-danger" onclick='return confirm( "are you sure you want to delete @dp.Name")' type="submit" value="Delete" />
						</form>
					</td>
				</tr>
			}
		}
	</tbody>
</table>

