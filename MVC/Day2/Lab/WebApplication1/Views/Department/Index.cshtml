@model IEnumerable<Department>
@{
	ViewData["Title"] = "Index";
}

<a asp-action="Create" class="btn btn-primary mb-3">ADD</a>
<table class="table table-bordered table-hover">
	<thead>

		<tr>
			<th>ID</th>
			<th>Name</th>
			<th>Capacity</th>
		</tr>
	</thead>
	<tbody>
		@if (Model.Count() == 0)
		{
			<tr>
				<td colspan="3">No Departments Exists</td>
			</tr>
		}
		else
		{
			foreach (Department dp in Model)
			{
				<tr>
					<td>@dp.Id</td>
					<td>@dp.Name</td>
					<td>@dp.Capacity</td>
				</tr>
			}
		}
	</tbody>
</table>

