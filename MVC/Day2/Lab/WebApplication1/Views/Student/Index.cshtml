@model IEnumerable<Student>
@{
	ViewData["Title"] = "Index";
}


<a asp-action="Create" class="btn btn-primary mb-3">ADD</a>
<table class="table table-bordered table-hover">
	<thead>

		<tr>
			<th>ID</th>
			<th>Name</th>
			<th>Department</th>
		</tr>
	</thead>
	<tbody>
		@if (Model.Count() == 0)
		{
			<tr>
				<td colspan="3">No Departments Exists</td>
			</tr>
		}
		else
		{
			foreach (Student st in Model)
			{
				<tr>
					<td>@st.Id</td>
					<td>@st.Name</td>
					<td>@st.Department.Name</td>
				</tr>
			}
		}
	</tbody>
</table>
