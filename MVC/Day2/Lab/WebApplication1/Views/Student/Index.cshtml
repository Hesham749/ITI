@model IEnumerable<Student>
@{
	ViewData["Title"] = "Index";
}


<a asp-action="Create" class="btn btn-primary mb-3">ADD</a>
<table class="table table-bordered table-hover">
	<thead>

		<tr>
			<th>ID</th>
			<th>Name</th>
			<th>Department</th>
			<th>Mail</th>
			<th>Operation</th>
		</tr>
	</thead>
	<tbody>
		@if (Model.Count() == 0)
		{
			<tr>
				<td colspan="4">No Departments Exists</td>
			</tr>
		}
		else
		{
			foreach (Student st in Model)
			{
				<tr>
					<td>@st.Id</td>
					<td>@st.Name</td>
					<td>@st.Department.Name</td>
					<td>@st.Mail</td>
					<td>
						<a asp-action="Info" asp-route-id="@st.Id" class="btn btn-info">Details</a>
						<a asp-action="Update" asp-route-id="@st.Id" class="btn btn-warning">Update</a>
						<form class="d-inline-block" asp-action="Delete" asp-route-id="@st.Id">
							<input class="btn btn-danger" onclick='return confirm( "are you sure you want to delete @st.Name")' type="submit" value="Delete" />
						</form>
					</td>
				</tr>
			}
		}
	</tbody>
</table>
